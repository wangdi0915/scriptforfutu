ADV:= IF(CLOSE=OPEN, IF(C>REF(C,1),VOL/1000000,-VOL/1000000), (CLOSE-OPEN)/(HIGH-LOW)*VOL/1000000);
WAAD:SUM(ADV,TOTALBARSCOUNT),COLORFFC90E;
MAWAD:  MA(WAAD,20), COLORBLUE;
AA1:=REF(WAAD,8)=HHV(WAAD,17);
BB1:=FILTER(AA1,8);
CC1:=BACKSET(BB1,9);
DD1:=FILTER(CC1,8);{高点}

前期高点:=REF(WAAD,BARSLAST(DD1));

STICKLINE(C>0,前期高点,前期高点,1,-1),COLORFF00FF;

DRAWICON(CROSS(WAAD,前期高点),WAAD,1);
